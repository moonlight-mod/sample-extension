    "esbuild": "^0.19.3",
    "esbuild-copy-static-files": "^0.1.0",
    "eslint": "^9.12.0",
    "prettier": "^3.1.0",
    "typescript": "^5.3.2"
  },
  "dependencies": {
    "@moonlight-mod/types": "^1.3.1"
  }
}
